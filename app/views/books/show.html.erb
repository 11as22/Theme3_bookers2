
<%= flash[:notice] %>



<div class ="container px-5 px-sm-0">
  <div class ="row">

            <div class = "col-md-3 ">
              <%= render 'user_info', user: @user %>
              <%= render 'book', book: @book %>
            </div>
           
            <div class = "col-md-8 offset-md-1">
            <h2>Book detail</h2>
            <table class ="table table-hover table-inverse">

                <tbody>
                    <td>
                    <%= link_to user_path(@bookz.user_id) do %>
                    <%= image_tag @bookz.user.get_profile_image(100,100) %></br>
                    <%= @books.user.name %>
                    <% end %>
                    </td>
                    <td> <%= link_to @bookz.title, book_path(@bookz) %></td>
                    <td><%= @bookz.body %></td>
                    <% if @bookz.user == current_user %>
                    <td><%= link_to "Edit", edit_book_path(@bookz), class: "btn btn-sm btn-success" %></td>
                    <td><%= link_to 'Destroy', book_path(@bookz), method: :delete,"data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %></td>
                    <% end %>
                </tbody>
            </table>
        </div>

   </div>
</div>